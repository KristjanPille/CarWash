@model Domain.Payment

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="PersonId" class="control-label"></label>
    <select asp-for="PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
</div>
<div class="form-group">
    <label asp-for="PaymentMethodId" class="control-label"></label>
    <select asp-for="PaymentMethodId" class ="form-control" asp-items="ViewBag.PaymentMethodId"></select>
</div>
<div class="form-group">
    <label asp-for="CheckId" class="control-label"></label>
    <select asp-for="CheckId" class ="form-control" asp-items="ViewBag.CheckId"></select>
</div>
<div class="form-group">
    <label asp-for="PaymentAmount" class="control-label"></label>
    <input asp-for="PaymentAmount" class="form-control" />
    <span asp-validation-for="PaymentAmount" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TimeOfPayment" class="control-label"></label>
    <input asp-for="TimeOfPayment" class="form-control" />
    <span asp-validation-for="TimeOfPayment" class="text-danger"></span>
</div>