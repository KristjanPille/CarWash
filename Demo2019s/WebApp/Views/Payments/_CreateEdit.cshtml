@model WebApp.ViewModels.PaymentCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Payment.PersonId" class="control-label"></label>
    <select asp-for="Payment.PersonId" class ="form-control" asp-items="Model.PersonSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment.PaymentMethodId" class="control-label"></label>
    <select asp-for="Payment.PaymentMethodId" class ="form-control" asp-items="Model.PaymentMethodSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment.CheckId" class="control-label"></label>
    <select asp-for="Payment.CheckId" class ="form-control" asp-items="Model.CheckSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment.PaymentAmount" class="control-label"></label>
    <input asp-for="Payment.PaymentAmount" class="form-control" />
    <span asp-validation-for="Payment.PaymentAmount" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Payment.TimeOfPayment" class="control-label"></label>
    <input asp-for="Payment.TimeOfPayment" class="form-control" />
    <span asp-validation-for="Payment.TimeOfPayment" class="text-danger"></span>
</div>