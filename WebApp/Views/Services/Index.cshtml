@model IEnumerable<Domain.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameOfService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.campaignID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameOfService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.campaignID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.serviceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.serviceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.serviceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
